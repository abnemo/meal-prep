{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist/mealPrep",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      ".vscode",
      ".git",
      ".gitignore",
      ".editorconfig",
      "src/**/.*",
      "database.rules.json",
      "package.json",
      "README.md",
      "tsconfig.json",
      "webpack.config.js",
      "yarn.lock",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "/public/**",
        "destination": "/public.html"
    },
    {
        "source": "**",
        "destination": "/index.html"
    }
]
  }
}
