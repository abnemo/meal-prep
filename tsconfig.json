{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths":  {
      "app": ["app/*"],
      "assets": ["assets/*"],
      "auth": ["auth/*"],
      "environments": ["environments/*"],
      "prep": ["prep/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
